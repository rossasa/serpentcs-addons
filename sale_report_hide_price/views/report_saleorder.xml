<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//table[@class='table table-condensed']/thead/tr/th[4]" position="replace">
                <t t-if="o.show_price">
                    <th class="text-right">Unit Price</th>
                </t>
            </xpath>

            <xpath expr="//table[@class='table table-condensed']/thead/tr/th[5]" position="replace">
                <t t-if="o.show_discount">
                    <th groups="sale.group_discount_per_so_line">Disc.(%)</th>
                </t>
            </xpath>
            <xpath expr="//table[@class='table table-condensed']/thead/tr/th[last()]" position="replace">
                <t t-if="o.show_price">
                    <th class="text-right">Price</th>
                </t>
            </xpath>

            <xpath expr="//table/tbody[@class='sale_tbody']/tr/td[4]" position="replace">
                <t t-if="o.show_price">
                    <td class="text-right">
                        <span t-field="l.price_unit"/>
                    </td>
                </t>
            </xpath>

            <xpath expr="//table/tbody[@class='sale_tbody']/tr/td[5]" position="replace">
                <t t-if="o.show_discount">
                    <td groups="sale.group_discount_per_so_line">
                        <span t-field="l.discount"/>
                    </td>
                </t>
            </xpath>
            <xpath expr="//table/tbody[@class='sale_tbody']/tr/td[last()]" position="replace">
                <t t-if="o.show_price ">
                     <td class="text-right">
                        <span t-field="l.price_subtotal"
                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                    </td>
                </t>
            </xpath>

        </template>

    </data>
</openerp>